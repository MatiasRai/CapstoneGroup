/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["jest"]   // ✅ Se agregan los tipos de Jest para evitar errores en tests
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts",
    "src/declarations.d.ts"   // ✅ Permite importar imágenes como módulos
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "!src/**/*.spec.ts"       // ✅ Se excluyen los archivos de test (.spec.ts)
  ]
}
